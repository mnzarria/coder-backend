<div class="columns">
  <div class="columna-50">
<h2>Lista de productos est√°tica</h2>
<br />
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Productos</th>
      <th scope="col">Precio</th>
      <th scope="col">Stock</th>
      <th scope="col">Detalles</th>
    </tr>
  </thead>
  <tbody>
    {{#each products.docs}}
      <tr>
        <td scope="row">{{title}}</th>
        <td scope="row">${{price}}</td>
        <td scope="row">{{stock}}u</td>
        <td scope="row"><button><a href="/views/products/{{_id}}">Ver</a></button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<br />
{{#if products.hasPrevPage}}
  <button type="button" class="btn btn-dark">
    <a href="/views/products/page/{{products.prevPage}}">Anterior</a>
  </button>
{{/if}}

{{#if products.hasNextPage}}
  <button type="button" class="btn btn-dark">
    <a href="/views/products/page/{{products.nextPage}}">Siguiente</a>
  </button>
{{/if}}

<script src="/socket.io/socket.io.js"></script>
</div>
</div>